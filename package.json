{
  "name": "zala",
  "version": "1.0.1",
  "main": "main.js",
  "license": "MIT",
  "scripts": {
    "start": "npx electron .",
    "build": "npx electron-builder ."
  },
  "build": {
    "linux": {
      "target": [
        {
